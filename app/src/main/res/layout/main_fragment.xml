<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.TraceFragment"
        android:padding="20dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:text="@string/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text"
                />

        <TextView
                android:id="@+id/uuid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear"
                    android:id="@+id/clear"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_id"
                    android:id="@+id/new_id"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/timewindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <Spinner
                    android:layout_width="wrap_content"
                    style="@style/spinnerstyle"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/timewindow"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

        <Switch
                android:text="Discovering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discover_switch"
                style="@style/switchstyle"
                android:layout_weight="1"
                />

        <Switch
                android:text="Peripheral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/peripheral_switch"
                style="@style/switchstyle"
                android:layout_weight="1"
                />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text"
                android:layout_weight="1"
                android:text="@string/advertising_mode"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text"
                android:layout_weight="1"
                android:text="@string/signal_strength"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

        <Spinner
                android:text="Advertise mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinnerstyle"
                android:id="@+id/advertisemode_switch"
                android:layout_weight="1"
                />

        <Spinner
                android:text="Signal strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinnerstyle"
                android:id="@+id/signalstrength_switch"
                android:layout_weight="1"
                />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listview"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>
